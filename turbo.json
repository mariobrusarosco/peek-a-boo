{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "DATABASE_URL",
        "DATABASE_DIRECT_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "NEXT_PUBLIC_SDK_SERVICE_URL",
        "NODE_ENV",
        "VERCEL_ENV",
        "VERCEL_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:types": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test:cov": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma", "prisma/migrations/**"]
    },
    "prisma:studio": {
      "cache": false,
      "persistent": true
    },
    "prisma:migrate:dev": {
      "cache": false,
      "inputs": ["prisma/schema.prisma", "prisma/migrations/**"]
    },
    "prisma:seed": {
      "cache": false,
      "dependsOn": ["prisma:generate"]
    }
  }
}