{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm build:core && cd packages/core && npx prisma migrate deploy && cd ../.. && pnpm build:sdk-service"
  },
  "deploy": {
    "startCommand": "cd apps/sdk-service && pnpm start:prod",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on_failure"
  },
  "variables": {
    "NIXPACKS_NODE_VERSION": "22",
    "NODE_ENV": "production",
    "SKIP_ENV_VALIDATION": "1"
  }
} 