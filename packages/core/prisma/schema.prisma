// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses connection pooling
  directUrl = env("DATABASE_DIRECT_URL") // uses a direct connection for migrations
}

// User model - simplified for the project creation feature
model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String?   // Hashed password
  role      UserRole  @default(MEMBER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Projects owned by this user
  projects  Project[]

  @@map("users")
}

// Project model - simplified for initial implementation
model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Association to the user who owns this project
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  featureFlags FeatureFlag[]

  @@map("projects")
}


model FeatureFlag {
  id          String      @id @default(cuid())
  key         String      // Unique identifier for the flag (e.g., "new-checkout")
  name        String      // Display name
  description String?     // Optional description
  enabled     Boolean     @default(false)
  value       Json        // JSON value for variations (future use)
  environment Environment @default(DEVELOPMENT)

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Unique constraint: one flag key per project per environment
  @@unique([key, projectId, environment])
  @@map("feature_flags")
}


model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  featureFlags FeatureFlag[]
  
  @@map("organizations")
}

// Enums
enum UserRole {
  ADMIN
  MEMBER
}

enum Environment {
  DEVELOPMENT
  STAGING
  PRODUCTION
}